<% @wishes.each do |wish| %>
	<div class="wish_paragraph">
		<div class="paragraph">
		<span class= "blank"> <%= wish.nickname %> </span>, 
	  </div>
	  <div class= "paragraph">
	    This past year, my favorite memory of you was <span class= "blank"> <%= wish.favmem%> </span>.  I totally thought "<span class= "blank"> <%= wish.thought%> </span>".  
	  </div>
	  <div class= "paragraph">
	    For the first year of your 30s, I wish you <span class= "blank"> <%= wish.first %> </span>, <span class= "blank">  <%= wish.second %> </span>, and <span class= "blank"> <%= wish.third %> </span>, but not <span class= "blank"> <%= wish.omen %> </span>.
	  </div>

	  <div class= "paragraph">
	    <span class= "blank"> <%= wish.salutation %> </span>,
	  </div>
	  <div class= "paragraph">
	    <span class= "blank"> <%= wish.wisher %> </span>, your <span class= "blank"> <%= wish.relationship %> </span>
	  </div>

	  <div class= "paragraph">
	    PS. <span class= "blank"> <%= wish.ps %> </span>
	  </div>
	</div>
<% end %>
